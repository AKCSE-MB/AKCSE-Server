{
  "name": "akcse-mb-server",
  "version": "0.5.16",
  "description": "",
  "author": "",
  "private": true,
  "license": "UNLICENSED",
  "scripts": {
    "build": "nest build",
    "swagger": "npx nestia swagger",
    "sdk": "rimraf ./src/api/functional && NODE_ENV=development nestia sdk",
    "nestia": "npm run swagger ; npm run sdk",
    "build:api": "rimraf packages/api/lib && npm run nestia && tsc -p ./tsconfig.api.json",
    "package:publish": "npm run build:api && cd ./packages/api && npm publish --access=public",
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
    "start": "nest start",
    "start:dev": "cross-env NODE_ENV=dev nest start --watch",
    "start:test": "cross-env NODE_ENV=test nest start --watch",
    "start:debug": "nest start --debug --watch",
    "start:prod": "node dist/src/main",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "test": "NODE_ENV=test jest --testPathPattern='/src/'",
    "test:seq": "NODE_ENV=test ENV=test jest --runInBand --testPathPattern='/src/' --bail=false",
    "test:seq:failed": "NODE_ENV=test ENV=test jest --runInBand NODE_ENV=test ENV=test --testPathPattern='/src/' --bail=false --onlyFailures",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "NODE_ENV=test jest src/**/**/*.controller.spec.ts src/app.controller.spec.ts",
    "prepare": "ts-patch install && typia patch && husky install",
    "husky": "npx husky install && npx husky add .husky/pre-commit"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "dependencies": {
    "@fxts/core": "^0.21.0",
    "@nestia/core": "^3.17.0",
    "@nestia/e2e": "^0.7.0",
    "@nestia/fetcher": "^3.17.0",
    "@nestia/sdk": "^3.17.0",
    "@nestjs/common": "^10.0.0",
    "@nestjs/config": "^3.0.0",
    "@nestjs/core": "^10.0.0",
    "@nestjs/jwt": "^10.1.1",
    "@nestjs/mapped-types": "*",
    "@nestjs/platform-express": "^10.0.0",
    "@prisma/client": "^5.1.1",
    "@sentry/nestjs": "^8.51.0",
    "@sentry/profiling-node": "^8.51.0",
    "@types/bcrypt": "^5.0.0",
    "axios": "^1.7.9",
    "bcrypt": "^5.1.1",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.0",
    "date-fns": "^2.30.0",
    "fp-ts": "^2.16.1",
    "joi": "^17.9.2",
    "nest-winston": "^1.9.3",
    "reflect-metadata": "^0.1.13",
    "rxjs": "^7.8.1",
    "ts-mailgun": "^0.5.1",
    "typescript-transform-paths": "^3.4.6",
    "typia": "^6.11.2"
  },
  "devDependencies": {
    "@nestia/benchmark": "^0.2.3",
    "@nestjs/cli": "^10.0.0",
    "@nestjs/schematics": "^10.0.0",
    "@nestjs/swagger": "^7.1.11",
    "@nestjs/testing": "^10.0.0",
    "@relmify/jest-fp-ts": "^2.1.1",
    "@types/express": "^4.17.17",
    "@types/jest": "^29.5.2",
    "@types/node": "^20.3.1",
    "@types/supertest": "^2.0.12",
    "@typescript-eslint/eslint-plugin": "^6.1.0",
    "@typescript-eslint/parser": "^6.1.0",
    "cooky-cutter": "^1.5.4",
    "cross-env": "^7.0.3",
    "eslint": "^8.42.0",
    "eslint-config-prettier": "^8.10.0",
    "eslint-plugin-prettier": "^4.2.1",
    "eslint-plugin-unused-imports": "^3.0.0",
    "husky": "^8.0.3",
    "io-ts": "^2.2.21",
    "jest": "^29.5.0",
    "lint-staged": "^13.2.3",
    "nestia": "^6.2.0",
    "prettier": "^2.8.8",
    "prisma": "^5.1.1",
    "source-map-support": "^0.5.21",
    "supertest": "^6.3.3",
    "ts-jest": "^29.1.0",
    "ts-loader": "^9.4.3",
    "ts-node": "^10.9.2",
    "ts-patch": "^3.2.1",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.6.3"
  },
  "jest": {
    "setupFilesAfterEnv": [
      "<rootDir>/jest.setup.ts",
      "@relmify/jest-fp-ts"
    ],
    "moduleNameMapper": {
      "^@root/(.*)$": "<rootDir>/$1",
      "^@src/(.*)$": "<rootDir>/src/$1",
      "^@domain/(.*)$": "<rootDir>/src/domain/$1",
      "^@common/(.*)$": "<rootDir>/src/common/$1",
      "^@utils/(.*)$": "<rootDir>/src/utils/$1",
      "^@thirdParty/(.*)$": "<rootDir>/src/third-party/$1"
    },
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": ".",
    "testRegex": ".*\\.spec\\.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "collectCoverageFrom": [
      "**/*.(t|j)s"
    ],
    "coverageDirectory": "../coverage",
    "testEnvironment": "node"
  },
  "lint-staged": {
    "src/**/*.{js,jsx,ts,tsx}": [
      "eslint --fix",
      "prettier --write"
    ]
  },
  "bundleDependencies": [
    "@sentry/nestjs",
    "@sentry/profiling-node"
  ]
}
